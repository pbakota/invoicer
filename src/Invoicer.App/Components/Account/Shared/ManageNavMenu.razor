@using Microsoft.AspNetCore.Identity
@using Invoicer.Models

@inject IStringLocalizer<I18N> Loc

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">@Loc["NavMenu.Invoicer.App"]</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">

    <NavProfileMenu/>

    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <RadzenIcon class="bi" Icon="home" IconColor="white" /> @Loc["ManageNavMenu.BackToHome"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Account/Manage" Match="NavLinkMatch.All">
                <RadzenIcon class="bi" Icon="account_box" IconColor="white" />@Loc["ManageNavMenu.Profile"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Account/Manage/Email">
                <RadzenIcon class="bi" Icon="alternate_email" IconColor="white" />@Loc["ManageNavMenu.Email"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Account/Manage/ChangePassword">
                <RadzenIcon class="bi" Icon="password" IconColor="white" />@Loc["ManageNavMenu.Password"]
            </NavLink>
        </div>
    </nav>
</div>